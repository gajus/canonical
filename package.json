{
  "name": "canonical",
  "description": "Canonical code style linter and formatter for JavaScript, SCSS and CSS.",
  "main": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/gajus/canonical"
  },
  "keywords": [
    "eslint",
    "scss-lint",
    "scss",
    "css",
    "lint"
  ],
  "bin": "./dist/bin/index.js",
  "version": "1.1.0",
  "author": {
    "name": "Gajus Kuizinas",
    "email": "gk@anuary.com",
    "url": "http://gajus.com"
  },
  "license": "BSD-3-Clause",
  "scripts": {
    "readme": "node ./node_modules/.bin/gitdown ./.README/README.md --output-file ./README.md",
    "build": "rm -fr ./dist; node ./node_modules/.bin/babel --copy-files ./src --out-dir ./dist",
    "watch": "rm -fr ./dist; node ./node_modules/.bin/babel --watch --copy-files ./src --out-dir ./dist"
  },
  "dependencies": {
    "babel": "^5.8.23",
    "babel-eslint": "^4.1.3",
    "chalk": "^1.1.1",
    "eslint": "^1.7.2",
    "eslint-config-canonical": "^1.0.3",
    "eslint-config-canonical-jsdoc": "^1.1.2",
    "eslint-config-canonical-react": "^1.1.2",
    "eslint-plugin-jsdoc": "^1.1.0",
    "eslint-plugin-react": "^3.6.3",
    "globby": "^3.0.1",
    "lodash": "^3.10.1",
    "table": "^3.7.0",
    "yargs": "^3.27.0"
  },
  "devDependencies": {
    "gitdown": "^2.4.0"
  }
}

{
  "name": "canonical",
  "description": "Canonical code style linter and formatter for JavaScript, SCSS and CSS.",
  "main": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/gajus/canonical"
  },
  "keywords": [
    "eslint",
    "scss-lint",
    "scss",
    "css",
    "lint"
  ],
  "bin": "./dist/bin/index.js",
  "version": "2.2.3",
  "author": {
    "name": "Gajus Kuizinas",
    "email": "gk@anuary.com",
    "url": "http://gajus.com"
  },
  "license": "BSD-3-Clause",
  "scripts": {
    "readme": "node ./node_modules/.bin/gitdown ./.README/README.md --output-file ./README.md",
    "build": "rm -fr ./dist; node ./node_modules/.bin/babel --copy-files ./src --out-dir ./dist",
    "watch": "rm -fr ./dist; node ./node_modules/.bin/babel --watch --copy-files ./src --out-dir ./dist"
  },
  "dependencies": {
    "babel-eslint": "^4.1.5",
    "chalk": "^1.1.1",
    "eslint": "^1.9.0",
    "eslint-config-canonical": "^1.2.3",
    "eslint-config-canonical-jsdoc": "^1.2.1",
    "eslint-config-canonical-react": "^1.2.1",
    "globby": "^4.0.0",
    "lodash": "^3.10.1",
    "sass-lint": "^1.3.3",
    "table": "^3.7.3",
    "yargs": "^3.30.0"
  },
  "devDependencies": {
    "babel-cli": "^6.1.18",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-stage-0": "^6.1.18",
    "gitdown": "^2.4.0"
  }
}
